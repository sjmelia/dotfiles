Config { font = "xft:Nimbus Sans-10"
	, borderColor = "black"
	, border = TopB
	, bgColor = "black"
	, fgColor = "grey"
	, position = TopW L 100
	, commands = [ Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
			, Run BatteryP ["BAT0"]
				["-t", "<left>%",
				"-L", "10", "-H", "80", "-p", "3",
				"--", "-O", "<fc=green>On</fc> - ", "-i", "",
				"-L", "-15", "-H", "-5",
				"-l", "red", "-m", "blue", "-h", "green"
				]
				600
			, Run StdinReader
			]
	, sepChar = "%"
	, alignSep = "}{"
	, template = "%StdinReader% }{ %battery% | <fc=#ee9a00>%date%</fc>"
	}
