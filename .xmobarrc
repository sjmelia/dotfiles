Config { font = "xft:Nimbus Sans-10"
	, borderColor = "black"
	, border = TopB
	, bgColor = "black"
	, fgColor = "grey"
	, position = TopW L 100
	, commands = [ Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
			, Run BatteryP ["BAT0"]
				["-t", "<leftipat>",
				"-L", "10", "-H", "80", "-p", "3",
				"--", 
				"--on-icon-pattern", "<fc=green><left>%</fc> / <timeleft>",
				"--off-icon-pattern", "<left>% / <timeleft>"
				]
				600
			, Run StdinReader
			]
	, sepChar = "%"
	, alignSep = "}{"
	, template = "%StdinReader% }{ %battery% | <fc=#ee9a00>%date%</fc>"
	}
